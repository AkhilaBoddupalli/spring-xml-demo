<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


<!--    //creating bean objects-->

    <bean id="actor" class="com.stackroute.spring.Actor">


        <constructor-arg name="name" value="akhila" type="String"></constructor-arg>
        <constructor-arg name="gender" value="female" type="String"></constructor-arg>
        <constructor-arg name="age" value="21" type="int"></constructor-arg>
    </bean>

    <bean id="actor1" class="com.stackroute.spring.Actor">


        <constructor-arg name="name" value="radha" type="String"></constructor-arg>
        <constructor-arg name="gender" value="female" type="String"></constructor-arg>
        <constructor-arg name="age" value="26" type="int"></constructor-arg>
    </bean>

    <bean id="actor2" class="com.stackroute.spring.Actor">


        <constructor-arg name="name" value="sruthi" type="String"></constructor-arg>
        <constructor-arg name="gender" value="female" type="String"></constructor-arg>
        <constructor-arg name="age" value="28" type="int"></constructor-arg>
    </bean>

            <bean id="movie" class="com.stackroute.spring.Movie">
                <constructor-arg name="actor" ref="actor"> </constructor-arg>

            </bean>
    <bean id="movie1" class="com.stackroute.spring.Movie">
        <constructor-arg name="actor" ref="actor1"> </constructor-arg>

    </bean>
    <bean id="movie2" class="com.stackroute.spring.Movie">
        <constructor-arg name="actor" ref="actor2"> </constructor-arg>

    </bean>

</beans>

